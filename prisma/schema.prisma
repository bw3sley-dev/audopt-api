// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Org {
  id   String @id @default(uuid())
  name String

  owner_name String
  email      String @unique
  password   String
  phone      String

  postal_code  String
  street       String
  coordinate_x String
  coordinate_y String

  created_at DateTime @default(now())

  @@map("orgs")
}
